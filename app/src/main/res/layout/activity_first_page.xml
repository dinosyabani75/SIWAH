<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPage"
    android:orientation="vertical"
    android:background="@color/maincolor3"
    tools:ignore="ScrollViewCount">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/dashboard_2"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neosans_std_ultra_tr"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="25dp"
        android:text="SELAMAT DATANG"
        android:textColor="@color/maincolor2"
        android:textSize="30sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        />


    <EditText
        android:id="@+id/nip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIP"
        android:autofillHints="username"
        android:importantForAutofill="yes"
        android:maxLength="18"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:textColorHint="@color/maincolor2"
        android:fontFamily="@font/neosansstd_tr"/>
    <EditText
        android:id="@+id/password_input"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/maincolor2"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:importantForAutofill="yes"
        android:maxLines="1"
        android:maxLength="30"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:hint="PASSWORD"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:fontFamily="@font/neosansstd_tr"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        app:cornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@color/maincolor2"
        android:textColor="@color/maincolor"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:fontFamily="@font/neosans_std_medium_tr"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neosans_std_medium_tr"
        android:gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:text="Belum mempunyai akun?"
        android:textColor="@color/maincolor2"
        android:textSize="15sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        />

    <TextView
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neosansstdbold_tr"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:text="REGISTER"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:textColor="@color/maincolor2"
        android:textSize="25sp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:clickable="false"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        android:background="@drawable/logo_berakhlak"
        app:menu="@menu/menu_navigation" />


</LinearLayout>